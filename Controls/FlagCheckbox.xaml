<UserControl
	x:Class="XivToolsWpf.Controls.FlagCheckbox"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:XivToolsWpf.Controls"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	x:Name="FlagCheckBoxUserControl"
	d:DesignHeight="450"
	d:DesignWidth="800"
	Background="{StaticResource XivToolsControlBorderBackground}"
	mc:Ignorable="d">

	<CheckBox
		x:Name="Checkbox"
		Background="{Binding Background, ElementName=FlagCheckBoxUserControl}"
		Checked="OnChecked"
		Unchecked="OnUnchecked">

		<TextBlock Text="{Binding Label}" />

	</CheckBox>

</UserControl>
