<UserControl
	x:Class="XivToolsWpf.Controls.KeyPrompt"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:XivToolsWpf.Controls"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">

	<Grid
		x:Name="ContentArea"
		MinWidth="28"
		Margin="1"
		Opacity="1">

		<Grid.Style>
			<Style TargetType="{x:Type Grid}">
				<Style.Triggers>
					<Trigger Property="IsEnabled" Value="False">
						<Setter Property="Opacity" Value="0.25" />
					</Trigger>
				</Style.Triggers>
			</Style>
		</Grid.Style>

		<Border
			Background="{DynamicResource BackgroundBrush}"
			BorderBrush="{DynamicResource BackgroundLightBrush}"
			BorderThickness="1"
			CornerRadius="3" />

		<StackPanel
			Margin="3,2,3,2"
			HorizontalAlignment="Center"
			Orientation="Horizontal">

			<TextBlock
				FontSize="12"
				Foreground="{DynamicResource ForegroundLightBrush}"
				Text="{Binding Label}" />

			<local:IconBlock
				FontSize="12"
				Foreground="{DynamicResource ForegroundLightBrush}"
				Icon="{Binding Icon}"
				IconStyle="{Binding IconStyle}"
				RenderTransformOrigin="0.5, 0.5">

				<local:IconBlock.RenderTransform>
					<RotateTransform Angle="{Binding IconRotation}" />
				</local:IconBlock.RenderTransform>
			</local:IconBlock>
		</StackPanel>

	</Grid>
</UserControl>
